{
    "manifest_version": 2,
    "name": "rdm_delay",
    "version": "1.0",
    "author": "Brice Meunier",
    "description": "Envoie automatiquement les e-mails en attente à intervalles réguliers",
    "browser_specific_settings": {
      "gecko": {
          "id": "rdm_delay@rdmarmotte.net",
          "strict_min_version": "128.0"
      }
    },
    "icons": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "64": "icons/icon.svg",
      "128": "icons/icon.svg"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": false,
      "browser_style": true
    },
    "permissions": [
      "storage",
      "messagesRead",
      "messagesMove",
      "accountsRead"
    ]
  }